
meta {
  str url = "/test"
}

use("assets/main.scss")

str line_content = "This is a list item"
str css = use("assets/main.scss")

element line = : li > @{line_content}

element lines = : ul {
  @{line}
  @{line}
  @{line}
}

map titles = {
  str A = "Title A"
  str B = "Title B"
  str C = "Title C"
}

std.println("Titles map: ")
for key in titles {
  std.println(key)
  std.println(titles[key])
}

list x = [
  "hello",
  "world"
]
for _, value in x {
  std.println(value)
}

return : html {
  head {
    title > @{titles["A"]}
    link rel="stylesheet" href=(css);
  }

  body {
    h1 > ''
      Hello
        world!
    ''
    @{lines}
    p > ''
      test
      \''
    ''
  }
}
